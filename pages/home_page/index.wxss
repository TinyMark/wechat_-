/* pages/in_theater/index.wxss */

.warp {
    padding: 25rpx;
}

.mask {
    width: 100vw;
    height: 100vh;
    text-align: center;
    line-height: 100vh;
}

image {
    width: 270rpx;
    height: 386rpx;
}

.list {
    margin: 10rpx;
    padding: 10rpx;
    position: relative;
}

.info {
    position: absolute;
    top: 0;
    margin-left: 300rpx;
    font-size: 14px;
    width: 342rpx;
}

.info view {
    margin: 10rpx 0;
}

.info .title {
    font-size: 36rpx;
    font-weight: bold;
    line-height: 36rpx;
    margin: 10rpx 0 30rpx 0;
}

.info span {
    font-size: 24rpx;
    font-weight: normal;
}

.info .title span {
    float: right;
}

.bottom {
    width: 100vw;
    line-height: 40px;
    text-align: center;
    color: gray;
}
